{
  "name": "josteph-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build-dev": "bnr deploy-dev",
    "build-staging": "bnr deploy-staging",
    "build": "bnr deploy",
    "start": "next start -H 0.0.0.0",
    "start:local": "next start",
    "setup": "sh ./install.sh setup",
    "analyze": "ANALYZE=true bnr deploy",
    "minify:svg": "node ./scripts/svg-minifier",
    "test": "jest",
    "test:coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "predeploy": "yarn build && yarn next export && touch out/.nojekyll",
    "deploy": "gh-pages -b master -d out --dotfiles"
  },
  "betterScripts": {
    "deploy-dev": {
      "command": "node scripts/deploy.js",
      "env": {
        "TARGET_ENV": "development"
      }
    },
    "deploy-staging": {
      "command": "node scripts/deploy.js",
      "env": {
        "TARGET_ENV": "staging"
      }
    },
    "deploy": {
      "command": "node scripts/deploy.js",
      "env": {
        "TARGET_ENV": "production"
      }
    }
  },
  "dependencies": {
    "@next/bundle-analyzer": "^9.5.2",
    "app-root-dir": "^1.0.2",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "better-npm-run": "^0.1.1",
    "dotenv-safe": "^8.2.0",
    "gray-matter": "^4.0.2",
    "lodash": "^4.17.20",
    "next": "10.1.0",
    "next-build-id": "^3.0.0",
    "next-pwa": "^5.2.21",
    "react": "17.0.1",
    "react-cookie": "^4.0.3",
    "react-dom": "17.0.1",
    "react-feather": "^2.0.9",
    "remark": "^12.0.1",
    "remark-autolink-headings": "^6.0.1",
    "remark-external-links": "^8.0.0",
    "remark-hint": "^1.0.9",
    "remark-html": "^13.0.1",
    "remark-prism": "^1.1.14",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.2.0",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-loader": "3.0.2",
    "eslint-plugin-flowtype": "3.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-jest-dom": "^2.0.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-testing-library": "^2.2.3",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.9",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^9.4.2",
    "prettier": "^2.1.0",
    "svgo": "^1.3.2",
    "ts-jest": "^26.5.3",
    "typescript": "^4.1.3",
    "typescript-plugin-css-modules": "^3.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
